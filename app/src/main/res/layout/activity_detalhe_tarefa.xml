<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context="sample.tqi.com.br.planodecarreira.f_tarefa.f_detalhe_tarefa.DetalheTarefaActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_activity_detalhe_tarefa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp">

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_activity_detalhe_tarefa"
        android:layout_marginBottom="56dp"/>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:bb_tabXmlResource="@xml/menu_bottom_navigation"
        app:bb_activeTabColor="@color/yellow"
        app:bb_badgesHideWhenActive="true"/>

</RelativeLayout>