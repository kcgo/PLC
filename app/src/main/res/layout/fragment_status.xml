<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sample.tqi.com.br.planodecarreira.f_tarefa.f_detalhe_tarefa.f_status.StatusFragment">

    <LinearLayout
        android:id="@+id/ln_texto_observacao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informe uma observação:" />

        <EditText
            android:id="@+id/edt_txt_observacao_status"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:maxLines="10"/>

        <Button
            android:id="@+id/btn_enviar_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:visibility="gone"
            android:text="Enviar"/>

        <LinearLayout
            android:id="@+id/ln_botao_tutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_rejeitar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:visibility="gone"
                android:text="Rejeitar"/>
            <Button
                android:id="@+id/btn_aprovar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:visibility="gone"
                android:text="Aprovar"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
